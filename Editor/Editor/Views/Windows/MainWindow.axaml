<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Toybox.ViewModels"
        xmlns:controls="clr-namespace:Toybox.Views.Controls"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
        x:Class="Toybox.Views.Windows.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Toybox">

    <Design.DataContext>
        <viewModels:MainWindowVM/>
    </Design.DataContext>
    
    <Grid Margin="0" RowDefinitions="45, *">
        
        <!-- Menu bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="_File" Margin="0">
                <Button Content="Save"></Button>
                <Button Content="Load"></Button>
                <Button Content="TEST"></Button>
            </MenuItem>
        </Menu>
        
        <!-- Game View -->
        <controls:ThreeDViewport Name="ThreeDViewport" Grid.Row="1"/>
        
    </Grid>
</Window>
